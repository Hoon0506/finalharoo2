<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.haroo.chat.mapper.ChatMapper">

	<select id="getList" resultType="com.haroo.chat.domain.EmpVO">
		<![CDATA[
		select * from employee where em_no > 0
		]]>
	</select>

	<select id="read" resultType="com.haroo.chat.domain.EmpVO">
		select * from employee where em_no =
		#{em_no}
	</select>
	
	<select id="getChatList" resultType="com.haroo.chat.domain.ChatVO">
		<![CDATA[
		select * from chat where em_no =
		#{em_no}
		]]>
	</select>

</mapper>